{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2020",
    "moduleResolution": "bundler",
    "types": ["vitest/globals", "vite/client"],
    "declaration": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}
