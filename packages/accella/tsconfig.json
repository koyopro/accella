{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "include": ["src"]
}
