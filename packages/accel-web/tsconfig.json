{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2020",
    "moduleResolution": "bundler",
    "types": ["vitest/globals"],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src", "**/tests"]
}
